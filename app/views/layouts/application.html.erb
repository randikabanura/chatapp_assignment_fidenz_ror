<!DOCTYPE html>
<html>
<head>
  <title>Message Me</title>
  <%= favicon_link_tag %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<div class="ui small inverted menu">
  <div class="ui container">
    <%= link_to 'Chatrrom', root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to 'Logout', login_path, class: "item", method: :delete %>
          <% else %>
            <%= link_to 'Login', login_path, class: "item" %>
            <%= link_to 'Signup', login_path, class: "item" %>
          <% end %>
        </div>
      </div>
      <div class="item">
        <% if !logged_in? %>
        <%= link_to "Login", login_path, class: "ui primary button" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
<div class="ui container">
  <%= render 'layouts/messages' %>
  <%= yield %>
</div>
</body>
</html>
